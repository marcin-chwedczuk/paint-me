<SplitPane prefHeight="650.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.marcinchwedczuk.paintme.gui.csstool.CssTool">
    <SplitPane orientation="VERTICAL">
        <AutocompleteTextArea fx:id="cssText">abc</AutocompleteTextArea>
        <ListView fx:id="cssProperties" editable="false" />
    </SplitPane>
    <SplitPane orientation="VERTICAL">
        <VBox>
            <HBox VBox.vgrow="NEVER" alignment="BASELINE_LEFT" spacing="2">
                <Label>Control:</Label>
                <ComboBox fx:id="selectedControl" />

                <Separator orientation="VERTICAL" />

                <Label>Extra classes:</Label>
                <TextField fx:id="extraClasses" />
            </HBox>
            <TabPane VBox.vgrow="ALWAYS">
                <Tab text="Preview" closable="false">
                    <VBox>
                        <BorderPane fx:id="controlContainer" VBox.vgrow="ALWAYS" />
                        <HBox VBox.vgrow="NEVER" alignment="CENTER_LEFT">
                            <Rectangle fx:id="statusIcon" width="16" height="16" HBox.hgrow="NEVER" />
                            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" spacing="2">
                                <Label>Zoom:</Label>
                                <Slider fx:id="zoomSlider" />
                            </HBox>
                        </HBox>
                    </VBox>
                </Tab>
                <Tab text="Structure" closable="false">
                    <TreeView fx:id="controlStructure" />
                </Tab>
            </TabPane>
        </VBox>
        <TextArea fx:id="warnings" editable="false">abc</TextArea>
    </SplitPane>
</SplitPane>